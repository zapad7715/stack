<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
	  $('.question-edit-errors').append('<%= j message %> </br>');
	<% end %>
<% else %>
  $('.notice').html('<%= j flash[:notice]%>')
  $('.question').html('<%= j render @question %>');
	$('.edit-question-link').click(function(e) {
		e.preventDefault();
		$(this).hide();
		question_id = $(this).data('questionId');
		$('form#edit-question-' + question_id).show();
		});
<% end %>